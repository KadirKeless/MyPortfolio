@model MyPortfolio.DAL.Entities.Message

<section id="contact" class="s-contact target-section">
    <div class="overlay"></div>
    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İLETİŞİM</h3>
            <h1>Bana ulaşın</h1>
@*             <p class="lead">Lorem ipsum Dolor adipisicing nostrud et aute Excepteur amet commodo ea dolore irure esse Duis nulla sint fugiat cillum ullamco proident aliquip quis qui voluptate dolore veniam Ut laborum non est in officia.</p>
 *@        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form asp-action="SendMessage" asp-controller="Message" method="post">
                <fieldset>
                    <div class="form-field">
                        <input asp-for="NameSurname" type="text" id="contactName" placeholder="Ad-Soyad" class="full-width" required />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input asp-for="Email" type="email" id="contactEmail" placeholder="Email" class="full-width" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <input asp-for="Subject" type="text" id="contactSubject" placeholder="Konu" class="full-width" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <textarea asp-for="MessageDetail" id="contactMessage" placeholder="Mesaj" rows="10" cols="50" class="full-width" required></textarea>
                        <span asp-validation-for="MessageDetail" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <button type="submit" class="full-width btn--primary">Gönder</button>
                    </div>
                </fieldset>
            </form>

            <!-- contact-warning -->
            @if (TempData["Error"] != null)
            {
                <div class="message-warning">
                    @TempData["Error"]
                </div>
            }

            <!-- contact-success -->
            @if (TempData["Success"] != null)
            {
                <div class="message-success">
                    @TempData["Success"]
                </div>
            }
        </div>

        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
